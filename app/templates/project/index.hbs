{{title project.title " by " project.organization.name}}

{{project-details project=project expanded=true}}
{{project-menu project=project}}
<div class="project-main">
  {{project-long-description project=project}}
</div>
<div class="project-sidebar">
  {{log project.currentDonationGoal}}
  <h3>Donations</h3>
  {{donations/donation-progress
    amountDonated=1500
    donationGoal=project.currentDonationGoal}}
  {{donations/donation-status
    createDonation=(action 'saveSubscription')
    subscription=subscription}}
  {{organization-members members=project.organization.organizationMembers}}  
</div>
